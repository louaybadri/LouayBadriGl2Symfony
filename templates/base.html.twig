<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body class="text-center" >
    <nav class="navbar-expand-lg navbar navbar-dark bg-primary" style="padding: 20px;margin-bottom: 20px">
        <a class="navbar-brand" href="#">Examen TP</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">

                <li class="nav-item">
                    <a class="nav-link" href="{{path('addPFE')}}">Add PFE</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{path('entreprise')}}">STATS</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="example-wrapper">
        {% for cle,value in  app.session.flashBag.get("success")%}
            <div class="alert alert-success">{{ value }}</div>
        {%endfor%}
    </div>
        {% block body %}{% endblock %}
    </body>
</html>
